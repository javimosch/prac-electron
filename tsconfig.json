{
  "compilerOptions": {
    
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": false,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": [ "electron/main/*" ]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "noImplicitAny": false
  },
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
